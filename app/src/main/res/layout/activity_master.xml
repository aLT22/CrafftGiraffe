<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/master_profile"
    tools:context=".ui.master.MasterActivity">

    <ImageView
        android:id="@+id/allPhotos"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        android:src="@drawable/all_photos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.constraint.Guideline
        android:id="@+id/horizontalFourtyFiveGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>

    <android.support.constraint.Guideline
        android:id="@+id/verticalTwentyGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>

    <ImageView
        android:id="@+id/sendMail"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/sent"
        app:layout_constraintBottom_toTopOf="@id/horizontalFourtyFiveGuideline"
        app:layout_constraintLeft_toLeftOf="@id/verticalTwentyGuideline"
        app:layout_constraintRight_toRightOf="@+id/verticalTwentyGuideline"
        app:layout_constraintTop_toBottomOf="@id/horizontalFourtyFiveGuideline"/>

    <ImageView
        android:id="@+id/arrowBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="24dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="24dp"
        android:src="@drawable/share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.Guideline
        android:id="@+id/horizontalThirtyFiveGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"/>

    <ImageView
        android:id="@+id/address"
        android:layout_width="272dp"
        android:layout_height="32dp"
        android:layout_marginLeft="78dp"
        android:src="@drawable/address"
        app:layout_constraintBottom_toBottomOf="@id/horizontalThirtyFiveGuideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontalThirtyFiveGuideline"/>

</android.support.constraint.ConstraintLayout>